<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ballantine's Pharmacy Management System</title>
    <link rel="stylesheet" href="~/Content/Style.css"/>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (Session["Role"].ToString() == "Pharmacist")
    {

        <div class="nav">
            <ul>
                <content>
                    <img src="~/Content/Untitled.jpg" style="
        float: left;
        width: 120px;
        height: 100px;
        margin-top: 10px;
        margin-left: 10px;
        margin-bottom: 10px;" />
                </content>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Users", "Index", "Users")</li>
                <li>@Html.ActionLink("Sales", "Index", "Sales")</li>
                <li>@Html.ActionLink("Medications", "Index", "Medications")</li>
                <li>@Html.ActionLink("Chronic Medication", "Index", "ChronicMedications")</li>
                <li>@Html.ActionLink("Customers", "Index", "Customers")</li>
                <li>@Html.ActionLink("Patients", "Index", "Patients")</li>
                <li>@Html.ActionLink("Create Sale", "Index", "POS")</li>
                <li>@Html.ActionLink("Sales History", "Index", "SalesDetails")</li>
                <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
            </ul>

            <ul class="nav navbar-right" style="font:black;">
            </ul>

        </div>



    }
    @if (Session["Role"].ToString() == "Assisstant")
    {
        <div class="nav">
            <ul>
                <content>
                    <img src="~/Content/Untitled.jpg" style="
        float: left;
        width: 120px;
        height: 100px;
        margin-top: 10px;
        margin-left: 10px;
        margin-bottom: 10px;" />
                </content>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Medications", "Index", "Medications")</li>
                <li>@Html.ActionLink("Chronic Medication", "Index", "ChronicMedications")</li>
                <li>@Html.ActionLink("Customers", "Index", "Customers")</li>
                <li>@Html.ActionLink("Patients", "Index", "Patients")</li>
                <li>@Html.ActionLink("Create Sale", "Index", "POS")</li>
                <li>@Html.ActionLink("Sales History", "Index", "SalesDetails")</li>
                <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
            </ul>

            <ul class="nav navbar-right" style="font:black;">
            </ul>
        </div>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ballantine's Pharmacy Management System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
